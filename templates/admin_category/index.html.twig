{% extends 'base.html.twig' %}

{% block title %}Hello AdminCategoryController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		<section class="container">

			<table>
				<h1>catégories</h1>		
							
							
				<tr>					

					<th scope="col">n° id</th>
					<th scope="col">Label</th>

					<th scope="col">voir</th>					
					<th scope="col">remove</th>
					<th scope="col">Edit</th>
				</tr>
					<a href="{{path('admin_add_category')}}" class="btn btn-primary">add</a>
				{% for category in categories %}
					<tbody>
						
						<tr>
							<td>
								{{category.id}}
							</td>

							<td>
								{{category.label}}
							</td>
							<td>
								<a href="{{path('admin_category_item',{id : category.id})}}" class="btn btn-primary">show</a>								
							</td>
							
							<td>
								<a href="{{path('admin_remove_category',{id : category.id})}}" class="btn btn-primary">remove</a>
							</td>
							<td>
								<a href="{{path('admin_edit_category',{id : category.id})}}" class="btn btn-primary">edit</a>
							</td>

						</tr>
						
					</tbody>
				{% endfor %}
			</table>
		</section>


	</div>
{% endblock %}
