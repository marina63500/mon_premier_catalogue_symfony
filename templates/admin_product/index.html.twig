{% extends 'base_admin.html.twig' %}


{% block title %}Hello AdminProductController!
{% endblock %}

{% block section %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<!-- Button trigger modal -->
	{# <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"> Delete
									</button> #}

	<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"> <div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="exampleModalLabel">Supprimer</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<p class="text-bg-light">Etes vous sûr de vouloir supprimer cet élément ?</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-danger" data-bs-dismiss="modal">Annuler</button>
					<button type="button" class="btn btn-primary">OK</button>
				</div>
			</div>
		</div>
	</div>


	<div class="example-wrapper">

		<section class="container">

			<table>
				<h1>Produits</h1>


				<tr>

					<th scope="col">n° id</th>
					<th scope="col">Name</th>

					<th scope="col">show</th>
					<th scope="col">remove</th>
					<th scope="col">Edit</th>
				</tr>
				<a href="{{path('admin_add_product')}}" class="btn btn-success">add</a>
				{% for product in products %}
					<tbody>

						<tr>
							<td>
								{{product.id}}
							</td>

							<td>
								{{product.name}}
							</td>
							<td>
								<a href="{{path('admin_product_show',{id : product.id})}}" class="btn btn-info">show</a>
							</td>

							<td>
								<a href="{{path('admin_remove_product',{id : product.id})}}" class="btn btn-danger" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">remove</a>


							</td>
							<td>
								<a href="{{path('admin_edit_product',{id : product.id})}}" class="btn btn-warning">edit</a>
							</td>

						</tr>

					</tbody>
				{% endfor %}
			</table>


		</section>


	</div>
{% endblock %}
